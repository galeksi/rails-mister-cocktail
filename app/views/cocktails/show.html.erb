<h1><%= @cocktail.name %></h1>
<%= link_to "See all Cocktails", cocktails_path %>
<p>Ingredients:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete %></li>
  <% end %>
</ul>
<%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
