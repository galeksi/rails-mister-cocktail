<nav class="navbar navbar-light navigation-custom">
  <div class="container-fluid">
    <a class="navbar-brand"><i class="fas fa-cocktail"></i> Dr. Drinx</a>
    <%= link_to "All drinks", cocktails_path, class: 'btn btn-outline-warning' %>
  </div>
</nav>
<div class="card-detail">
  <h1><%= @cocktail.name %></h1>
  <p>Ingredients:</p>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> - <%= link_to "", dose_path(dose), method: :delete, class: 'far fa-trash-alt' %></li>
    <% end %>
  </ul>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-outline-warning' %>
</div>
